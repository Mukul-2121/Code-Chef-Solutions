#include <bits/stdc++.h>
using namespace std;

int main() {
	int t,x,y;
	cin>>t;
	while(t--){
	    int count=0,ans=0;
	    cin>>x>>y;
	    if (x==y || x<y)cout<<"0"<<endl;
	    else if(x/2==y)cout<<y<<endl;
	    else{
	    
            cout<<abs(y-x)<<endl;
	    }
	}
	return 0;
}

